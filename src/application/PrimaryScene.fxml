<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F8FAFC;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ConverterController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" style="-fx-background-color: white; -fx-border-color: #E2E8F0; -fx-border-width: 0 0 1 0;">
            <padding><Insets left="30.0" right="30.0" /></padding>
            <children>
                <HBox alignment="CENTER" spacing="12.0">
                    <StackPane>
                        <Circle fill="#2563EB" radius="16.0" />
                        <Label text="â‡„" textFill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    </StackPane>
                    <VBox alignment="CENTER_LEFT">
                        <Label text="DATAFLOW" textFill="#0F172A" style="-fx-font-weight: 900; -fx-letter-spacing: 1px;">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <Label text="CONVERTER PRO" textFill="#64748B" style="-fx-font-size: 9px; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>
                
                <Region HBox.hgrow="ALWAYS" />
                
                <HBox alignment="CENTER" spacing="8.0" styleClass="mode-switcher">
                    <RadioButton fx:id="apiButton" selected="true" text="API" styleClass="toggle-item-left">
                        <toggleGroup><ToggleGroup fx:id="modeGroup" /></toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="manualButton" text="Sans API" toggleGroup="$modeGroup" styleClass="toggle-item-right" />
                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="25.0">
            <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>
            <children>
                <GridPane hgap="25.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                    </columnConstraints>
                    
                    <children>
                        <VBox spacing="12.0">
                            <Label text="INPUT SOURCE" textFill="#475569" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                            <TextArea fx:id="inputArea" promptText="Paste JSON or XML here..." styleClass="modern-editor" VBox.vgrow="ALWAYS" />
                            <HBox spacing="10.0">
                                <Button onAction="#loadXml" text="Import XML" styleClass="btn-secondary" />
                                <Button onAction="#loadJson" text="Import JSON" styleClass="btn-secondary" />
                            </HBox>
                        </VBox>

                        <VBox spacing="12.0" GridPane.columnIndex="1">
                            <Label text="OUTPUT PREVIEW" textFill="#475569" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                            <TextArea fx:id="outputArea" editable="false" styleClass="modern-editor, output-editor" VBox.vgrow="ALWAYS" />
                            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                <Button onAction="#convertXmlToJson" text="Generate JSON" styleClass="btn-primary" />
                                <Button onAction="#convertJsonToXml" text="Generate XML" styleClass="btn-primary" />
                            </HBox>
                        </VBox>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>
    
    <bottom>
    </bottom>
</BorderPane>